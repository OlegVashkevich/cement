{
    "name": "olegv/cement",
    "description": "Фабрика вариантов для Brick-компонентов",
    "type": "library",
    "keywords": ["component", "ui", "template", "php", "cement", "компоненты"],
    "homepage": "https://github.com/OlegVashkevich/cement",
    "license": "MIT",
    "authors": [{
        "name": "Oleg Vashkevich",
        "email": "ugluk@tut.by"
    }],
    "require": {
        "php": ">=8.2",
        "olegv/brick": "dev-master"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1.33",
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "OlegV\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OlegV\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "stan": "./vendor/bin/phpstan analyse -c phpstan.neon"
    }
}